<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Confirmar_Pin">


    <include
        layout="@layout/vista_reutilizar"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="330dp"
        android:layout_height="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="178dp"
        android:layout_marginEnd="41dp"
        app:srcCompat="@drawable/vectangle" />


    <TextView
        android:id="@+id/tvIngresarPin"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="139dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="560dp"
        android:fontFamily="@font/ubuntumedium"
        android:hint="@string/ingresarPin"
        android:textAlignment="center"
        android:textColorHint="@color/black"
        android:textSize="24sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/numeroPinConfirmar"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="60dp"
        android:layout_marginTop="258dp"
        android:hint="@string/ingresarPinDos">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:textAlignment="viewStart"
            android:textStyle="bold" />

    </com.google.android.material.textfield.TextInputLayout>




    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="430dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btnConfirmaPINCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="25dp"
            android:background="@color/colorlayoutinputs"
            android:text="Confirmar"
            android:textSize="19dp"
            android:fontFamily="@font/ubuntumedium"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnCancelarPINCliente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@color/colorlayoutinputs"
            android:fontFamily="@font/ubuntumedium"
            android:text="Cancelar"
            android:textSize="19dp"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>
